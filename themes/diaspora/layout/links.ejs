<div id="single">
    <div class="header"></div>
    <div class="section">
        <div class="article">
            <div class="main">
                <h1 class="title">友情链接</h1>
                <div class="content">
                    <style>
                        .link-navigation { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px; margin-top: 30px; }
                        .card { border: 1px solid #eee; padding: 15px; border-radius: 8px; transition: all .3s; text-align: center; }
                        .card:hover { box-shadow: 0 10px 20px rgba(0,0,0,0.05); transform: translateY(-5px); }
                        .card img { width: 80px; height: 80px; border-radius: 50%; margin-bottom: 10px; }
                        .card h4 { margin: 10px 0 5px; color: #333; }
                        .card p { font-size: 12px; color: #999; }
                    </style>
                    
                    <%- page.content %>

                    <div class="link-navigation">
                        <% if (site.data.links) { %>
                            <% for (var i in site.data.links) { %>
                                <a href="<%- site.data.links[i].url %>" target="_blank" rel="noopener">
                                    <div class="card">
                                        <img src="<%- site.data.links[i].avatar %>" alt="<%- site.data.links[i].name %>">
                                        <h4><%- site.data.links[i].name %></h4>
                                        <p><%- site.data.links[i].description %></p>
                                    </div>
                                </a>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>